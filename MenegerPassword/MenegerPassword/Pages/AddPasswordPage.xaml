<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MenegerPassword.Pages.AddPasswordPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Vertical">
                <Entry x:Name="LoginEntry" 
                       Text="{Binding Login}"
                       WidthRequest="340"
                       HeightRequest="70"
                       BackgroundColor="White"
                       HorizontalOptions="StartAndExpand"
                       FontSize="Body"
                       Placeholder="Логин"/>
                <Entry x:Name="PasswordEntry"
                       Text="{Binding Password}"
                       WidthRequest="340"
                       HeightRequest="70"
                       BackgroundColor="White"
                       HorizontalOptions="StartAndExpand"
                       FontSize="Body"
                       Placeholder="Логин"/>
                <StackLayout Orientation="Horizontal">
                    <Picker x:Name="Type" 
                       WidthRequest="340"
                            SelectedItem="{Binding Type}"
                            HeightRequest="70"
                       BackgroundColor="White"
                       HorizontalOptions="StartAndExpand"
                       FontSize="Body">
                        <Picker.Items>
                            <x:String>1 тип</x:String>
                            <x:String>2 тип</x:String>
                            <x:String>3 тип</x:String>
                            <x:String>4 тип</x:String>
                        </Picker.Items>
                    </Picker>
                    <Label Text="&#xe145;"
                           FontFamily="PasswordFont"
                           FontSize="24">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                        </Label.GestureRecognizers>
                    </Label>
                </StackLayout>
                
                <Entry x:Name="UrlEntry" 
                       Text="{Binding Url}"
                       WidthRequest="340"
                       HeightRequest="70"
                       BackgroundColor="White"
                       HorizontalOptions="StartAndExpand"
                       FontSize="Body"
                       Placeholder="Логин"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Button Text="Отменить"
                    BackgroundColor="Black"
                    TextColor="White"
                    x:Name="OtmenaBtn"
                    Clicked="OtmenaBtn_Clicked" 
                    WidthRequest="165"
                    HeightRequest="60"
                    CornerRadius="35"
                    VerticalOptions="EndAndExpand"/>
                <Button Text="Сохранить"
                    BackgroundColor="Black"
                    TextColor="White"
                    x:Name="SaveBtn"
                    Clicked="SaveBtn_Clicked" 
                    WidthRequest="165"
                    HeightRequest="60"
                    CornerRadius="35"
                    VerticalOptions="EndAndExpand"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>